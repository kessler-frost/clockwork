{
  "name": "Clockwork Production Configuration",
  "description": "Secure settings for production deployment",
  "environment": "production",
  "clockwork": {
    "core": {
      "project_name": "clockwork-prod",
      "log_level": "WARNING", 
      "build_dir": "/var/lib/clockwork/build",
      "state_file": "/var/lib/clockwork/state.json"
    },
    "intake": {
      "validation_enabled": true,
      "strict_mode": true,
      "resolver_cache_ttl": 3600
    },
    "assembly": {
      "planning_strategy": "conservative",
      "dependency_resolution": "explicit",
      "parallel_execution": false
    },
    "forge": {
      "compiler": {
        "use_agno": false,
        "build_dir": "/var/lib/clockwork/build",
        "security_validation": true,
        "timeout": 180
      },
      "ai_agent": {
        "enabled": false,
        "provider": "disabled",
        "model_id": null,
        "base_url": null,
        "timeout": 60,
        "max_tokens": 2000,
        "temperature": 0.0
      },
      "execution": {
        "default_runner": "docker",
        "timeout": 300,
        "retry_attempts": 1,
        "parallel_limit": 2
      },
      "joblib": {
        "n_jobs": 2,
        "backend": "threading",
        "cache_enabled": true,
        "cache_dir": "/var/lib/clockwork/cache",
        "compression_level": 3,
        "verbose": 0
      }
    },
    "security": {
      "allowed_runtimes": [
        "bash", "python3", "deno"
      ],
      "allowed_build_paths": [
        "/var/lib/clockwork/build"
      ],
      "validate_artifacts": true,
      "scan_dangerous_patterns": true,
      "strict_permissions": true,
      "sandbox_execution": true
    }
  },
  "logging": {
    "level": "WARNING",
    "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s",
    "file_logging": true,
    "log_file": "/var/log/clockwork/clockwork.log",
    "console_logging": false,
    "rotate_logs": true,
    "max_log_size": "10MB",
    "backup_count": 5
  },
  "monitoring": {
    "health_checks": true,
    "metrics_collection": true,
    "performance_monitoring": true,
    "alert_on_failures": true
  },
  "debug": {
    "enabled": false,
    "trace_requests": false,
    "save_intermediate_files": false
  }
}