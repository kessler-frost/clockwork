# Core Configuration
CLOCKWORK_PROJECT_NAME=my-project
CLOCKWORK_LOG_LEVEL=INFO
CLOCKWORK_BUILD_DIR=.clockwork/build
CLOCKWORK_STATE_FILE=.clockwork/state.json

# LM Studio Configuration  
CLOCKWORK_LM_STUDIO_URL=http://localhost:1234
CLOCKWORK_LM_STUDIO_MODEL=qwen/qwen3-4b-2507
CLOCKWORK_USE_AGNO=true

# AI Agent Settings
CLOCKWORK_AI_TIMEOUT=300
CLOCKWORK_AI_MAX_TOKENS=6000
CLOCKWORK_AI_TEMPERATURE=0.1
CLOCKWORK_AI_MAX_RETRIES=3

# Execution Settings
CLOCKWORK_PARALLEL_LIMIT=4
CLOCKWORK_DEFAULT_TIMEOUT=300
CLOCKWORK_RETRY_ATTEMPTS=3

# Security Settings
CLOCKWORK_SECURITY_VALIDATION=true
CLOCKWORK_SCAN_DANGEROUS_PATTERNS=true

# Development Settings
CLOCKWORK_DEBUG_ENABLED=false
CLOCKWORK_TRACE_REQUESTS=false
CLOCKWORK_SAVE_INTERMEDIATE_FILES=false

# Joblib Configuration
CLOCKWORK_JOBLIB_N_JOBS=-1
CLOCKWORK_JOBLIB_BACKEND=threading
CLOCKWORK_JOBLIB_CACHE_ENABLED=true
CLOCKWORK_JOBLIB_CACHE_DIR=.clockwork/cache
CLOCKWORK_JOBLIB_COMPRESSION_LEVEL=3